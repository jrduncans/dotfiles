[core]
	excludesfile = ~/dotfiles/git/global_excludes
	pager = delta

[interactive]
    diffFilter = delta --color-only

[user]
	name = Stephen Duncan
	email = jrduncans@users.noreply.github.com

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto

[alias]
	ba = branch -a
	br = branch
	ci = commit
	co = checkout
	rb = rebase
	st = status --short --branch
	p = pull --rebase --prune
	append = commit --amend --no-edit
	tree = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --graph --all
	graph = log --graph --all --decorate --stat --date=iso
	unstage = reset HEAD --
	fp = push --force-with-lease
	tags = log --date-order --tags --simplify-by-decoration --pretty=format:'%ci %Cgreen %h %Cblue %<|(75,trunc) %S %Creset %cn'

[push]
	default = current

[credential]
	helper = osxkeychain

[delta]
    navigate = true
	features = side-by-side line-numbers decorations

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[diff]
	tool = p4mergetool

[difftool "p4mergetool"]
	cmd = $P4MERGE $LOCAL $REMOTE

[difftool "diffmerge"]
	cmd = diffmerge \"$LOCAL\" \"$REMOTE\"

[merge]
	tool = p4mergetool

[mergetool "p4mergetool"]
	cmd = $P4MERGE $PWD/$BASE $PWD/$REMOTE $PWD/$LOCAL $PWD/$MERGED
	trustExitCode = false

[mergetool "diffmerge"]
	cmd = "diffmerge --nosplash -d --merge 2>/dev/null --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
	trustExitCode = true
	
[mergetool]
	keepBackup = false
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[rebase]
	autosquash = true

[includeIf "gitdir:**/workspace/nike/"]
	path = .gitconfig_nike
[init]
	defaultBranch = main
