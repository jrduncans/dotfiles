[core]
	excludesfile = ~/dotfiles/git/global_excludes

[user]
	name = Stephen Duncan
	email = stephen.duncan@gmail.com

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto

[alias]
	ba = branch -a
	br = branch
	ci = commit
	co = checkout
	rb = rebase
	st = status --short --branch
	p = pull --rebase --prune
	append = commit --amend --no-edit
	tree = log --graph --oneline --decorate --all
	graph = log --graph --all --decorate --stat --date=iso
	unstage = reset HEAD --

[push]
	default = current

[credential]
	helper = osxkeychain

[diff]
	tool = p4mergetool

[difftool "p4mergetool"]
	cmd = $P4MERGE $LOCAL $REMOTE

[difftool "diffmerge"]
	cmd = diffmerge \"$LOCAL\" \"$REMOTE\"

[merge]
	tool = p4mergetool

[mergetool "p4mergetool"]
	cmd = $P4MERGE $PWD/$BASE $PWD/$REMOTE $PWD/$LOCAL $PWD/$MERGED
	trustExitCode = false

[mergetool "diffmerge"]
	cmd = "diffmerge --nosplash -d --merge 2>/dev/null --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
	trustExitCode = true
	
[mergetool]
	keepBackup = false
[difftool "sourcetree"]
	cmd = /Applications/p4merge.app/Contents/MacOS/p4merge \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/p4merge.app/Contents/MacOS/p4merge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
	trustExitCode = true
[rebase]
	autosquash = true

